# Environment Configuration
NODE_ENV=development
PORT=3000

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/pharmalync?schema=public"

# Encryption Keys (256-bit / 64 hex characters)
ENCRYPTION_KEY="your-64-character-hex-encryption-key-here-replace-this-value"

# JWT Secrets
JWT_ACCESS_SECRET="your-jwt-access-secret-min-32-chars"
JWT_REFRESH_SECRET="your-jwt-refresh-secret-min-32-chars"
CONSENT_TOKEN_SECRET="your-consent-token-secret-min-32-chars"

# JWT Expiry
JWT_ACCESS_EXPIRY="15m"
JWT_REFRESH_EXPIRY="7d"
CONSENT_TOKEN_EXPIRY="60m"

# Blockchain Configuration (Sepolia Testnet)
BLOCKCHAIN_RPC_URL="https://sepolia.infura.io/v3/YOUR_INFURA_KEY"
BLOCKCHAIN_PRIVATE_KEY="your-wallet-private-key-without-0x-prefix"
BLOCKCHAIN_NETWORK="sepolia"

# Smart Contract Addresses (deployed contracts)
PHARMALYNC_CORE_ADDRESS="0x..."
PHARMALYNC_AUDIT_ADDRESS="0x..."

# Security
BCRYPT_ROUNDS=10
PBKDF2_ITERATIONS=10000

# CORS
ALLOWED_ORIGINS="http://localhost:5173,http://localhost:3000"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
